%p#notice= notice
.jumbotron
  %h1 My Posts
%table{class: 'table'}
  %thead
    %tr
      %th Title
      %th Body
      %th{:colspan => "3"}
  %tbody
    - @posts.each do |post|
      %tr
        %td= post.title
        %td= post.body
        %td= link_to 'Show', post, class: 'btn btn-info'
        %td= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning'
        %td= link_to 'Delete', post, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Post', new_post_path, class: 'btn btn-primary'
